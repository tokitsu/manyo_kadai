<h3>新規作成</h3>
<%= form_with(model: @task, local: true) do |form|%>

<%= form.label :name %><br>
<%= form.text_field :name %><br>

<%= form.label :content %><br>
<%= form.text_area :content %><br>

<%= form.label :expired_date %><br>
<%= form.date_field :expired_date %><br>

<%= form.label :status %><br>
<%= form.select :status, Task.statuses.keys, {waiting:'waiting',working:'working',completed:'completed'} %><br>

<%= form.label :priority %><br>
<%= form.select :priority, Task.priorities.keys,
{high:'high',middle:'middle',low:'low'}%><br>


<%= form.submit t('view.submit') %><br>
<% end %><br>

<%= link_to t('view.index'), tasks_path %>
